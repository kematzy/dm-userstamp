# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/dm-userstamps.rb'
require './lib/dm-userstamps/version.rb'

Hoe.new('dm-userstamps', DataMapper::Userstamps::VERSION) do |p|
  p.remote_rdoc_dir = '' # Release to root
  p.rubyforge_name = 'dm-userstamp'
  p.developer('RLivsey', 'richard@livsey.org')
end

